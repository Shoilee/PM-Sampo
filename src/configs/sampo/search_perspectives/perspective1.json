                    "instancePageExport": {
                        "tabID": 1,
                        "component": "Export",
                        "tabPath": "export",
                        "tabIcon": "CloudDownload",
                        "pageType": "instancePage"
                    }
                }
            }
        },
        "export": {
            "tabID": 1,
            "component": "Export",
            "tabPath": "export",
            "tabIcon": "CloudDownload",
